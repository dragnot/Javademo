<?xml version="1.0" encoding="UTF-8"?>
<configuration scan="true">

    <!-- Allow override of file location via application.properties logging.file.name -->
    <springProperty name="LOG_FILE" source="logging.file.name" defaultValue="logs/bookapp.log"/>
    <property name="LOG_PATTERN" value="%d{yyyy-MM-dd HH:mm:ss} %-5level %logger{36} - %msg%n"/>

    <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>${LOG_PATTERN}</pattern>
        </encoder>
    </appender>

    <!-- Rolling file: rotate daily and when size exceeds threshold. Keep 30 days. -->
    <appender name="FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>${LOG_FILE}</file>
        <rollingPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedRollingPolicy">
            <!-- Daily files with index when size exceeds max -->
            <fileNamePattern>logs/bookapp.%d{yyyy-MM-dd}.%i.log.gz</fileNamePattern>
            <!-- Roll when file reaches 50MB -->
            <maxFileSize>50MB</maxFileSize>
            <!-- Keep 30 days of history -->
            <maxHistory>30</maxHistory>
            <!-- Cap total size of all archived logs -->
            <totalSizeCap>2GB</totalSizeCap>
        </rollingPolicy>
        <encoder>
            <pattern>${LOG_PATTERN}</pattern>
        </encoder>
    </appender>

    <root level="INFO">
        <appender-ref ref="CONSOLE"/>
        <appender-ref ref="FILE"/>
    </root>

</configuration>
